# ShopLens Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider (Required)
# =============================================================================

# Which AI provider to use for chat: "gemini" or "openai"
LLM_PROVIDER=gemini

# Gemini API Key - Required when LLM_PROVIDER=gemini
# Get yours at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=

# Gemini model for chat/function calling
LLM_MODEL=gemini-3-flash-preview

# OpenAI API Key - Required when LLM_PROVIDER=openai
# Get yours at: https://platform.openai.com/api-keys

# =============================================================================
# Firecrawl (Required)
# =============================================================================

# Firecrawl API Key - Required for YouTube/blog URL discovery and scraping
# Get yours at: https://firecrawl.dev
FIRECRAWL_API_KEY=

# =============================================================================
# Security (Required)
# =============================================================================

# Secret key for JWT token signing - use a long random string
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL connection URL (asyncpg driver)
DATABASE_URL=postgresql+asyncpg://shoplens:shoplens@postgres:5432/shoplens

# PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=shoplens
POSTGRES_PASSWORD=shoplens
POSTGRES_DB=shoplens

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_URL=redis://redis:6379/0

# Cache TTLs (seconds)
CACHE_PRODUCT_TTL=3600
CACHE_FIRECRAWL_TTL=1800
CACHE_SUMMARY_TTL=7200

# =============================================================================
# Qdrant Configuration
# =============================================================================

QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=reviews

# Embedding model for vector search
EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# Rate Limiting
# =============================================================================

RATE_LIMIT_CHAT=10/minute
RATE_LIMIT_AUTH=5/minute

# =============================================================================
# Application Configuration
# =============================================================================

DEBUG=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
LOG_LEVEL=INFO
